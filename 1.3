// Toast Notification Component
const Toast = ({ message, onClose }) => {
  useEffect(() => {
    if (!message) return;
    const timer = setTimeout(onClose, 3000);
    return () => clearTimeout(timer);
  }, [message, onClose]);

  if (!message) return null;

  return (
    <div className="fixed bottom-24 left-1/2 transform -translate-x-1/2 bg-[#323232] text-[#F5F5F5] px-4 py-3 rounded-lg text-sm z-[100] toast-enter shadow-lg flex items-center gap-2 min-w-[200px] justify-center">
      <span>{message}</span>
    </div>
  );
};

